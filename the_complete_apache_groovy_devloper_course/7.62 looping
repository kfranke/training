//while
List numbers = [1,2,4]
while( numbers ){
    println "in a loop"
    numbers.remove(0)
}
assert numbers == []
//for
List nums = [1,2,3,4,5,6,7]
for(num in nums){
    println num
}
for(i in 10..20){println i}

for( i in 1..5 ) {
    
}
Closure c = {} //loops aren't closures
//return/break/contine

String getFoo() {
    "foo" //in groovy last line gets returned automagically
}

Integer a = 1
while( true ) {
 a++
 break
}
assert a == 2

for (String s in 'a'..'z'){
    if(s == 'a') continue
    println s
    if(s > 'b') break
}